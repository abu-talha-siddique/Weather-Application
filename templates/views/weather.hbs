 {{!-- JavaScript code for real-time data for Date and Time --}}
 <script>
      const curDate = document.getElementById("day");
      const curTime = document.getElementById("today_date");

      const getCurrentDay = () => {
        var weekday = new Array(7);
        weekday[0] = "SUN";
        weekday[1] = "MON";
        weekday[2] = "TUE";
        weekday[3] = "WED";
        weekday[4] = "THURS";
        weekday[5] = "FRI";
        weekday[6] = "SAT";

        let currentTime = new Date();
        let day = weekday[currentTime.getDay()];

        var months = [
          "JAN",
          "FEB",
          "MAR",
          "APR",
          "MAY",
          "JUNE",
          "JULY",
          "AUG",
          "SEPT",
          "OCT",
          "NOV",
          "DEC",
        ];

        var now = new Date();
        var month = months[now.getMonth()];
        var date = now.getDate();

        return `${day} / ${date} / ${month}`;
      };


      const getCurrentTime = () => {
        var months = [
          "Jan",
          "Feb",
          "Mar",
          "Apr",
          "May",
          "June",
          "July",
          "Aug",
          "Sept",
          "Oct",
          "Nov",
          "Dec",
        ];

        var now = new Date();

        let hours = now.getHours();
        let mins = now.getMinutes();

        let periods = "AM";

        if (hours > 11) {
          periods = "PM";
          if (hours > 12) hours -= 12;
        }
        if (mins < 10) {
          mins = "0" + mins;
        }

        return `${hours}:${mins}${periods}`;
      };

      curDate.innerHTML = getCurrentDay();
      curTime.innerHTML = getCurrentTime();
    </script>
<script src="js/main.js"></script>





   
